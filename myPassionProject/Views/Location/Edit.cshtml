@model myPassionProject.Models.LocationDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Location</h2>

<div>
    <a class="btn btn-primary mb-4" role="button" href="/Location/Details/@Model.LocationId">Back to Details</a>
</div>

<form method="POST" action="/Location/Update/@Model.LocationId">
    <input type="text" style="display:none;" name="LocationId" value="@Model.LocationId" />
    <div>
        <label>Name</label>
        <input type="text" name="LocationName" value="@Model.LocationName" />
    </div>

    <div>
        <label>LocationAddress</label>
        <input type="text" name="LocationAddress" value="@Model.LocationAddress" />
    </div>
    <input type="submit" value="Edit Location" />
</form>
